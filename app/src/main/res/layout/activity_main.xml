<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/copilot"
    tools:context=".activities.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ico"
            />
    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">

            <Button
                style="@style/AppButton"
                android:id="@+id/ActivadadPrincipalbtnAñadirRuta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/ActivadadPrincipalAñadirnuevaruta" />

            <Button
                style="@style/AppButton"
                android:id="@+id/ActivadadPrincipalbtnVerMisRutas"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ActivadadPrincipalVermisrutas" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp">


        <Button
            style="@style/AppButton"
                android:id="@+id/ActivadadPrincipalbtnAyuda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="@string/ActivadadPrincipalAyuda" />

            <Button
                style="@style/AppButton"
                android:id="@+id/ActivadadPrincipalbtnAcercaDe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ActivadadPrincipalbtnAcercade" />
        </TableRow>

        <TableRow
            android:gravity="center"
            >
            <Button
                style="@style/AppButton"
                android:id="@+id/ActivadadPrincipalbtnSalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ActivadadPrincipalSalir"
                />

        </TableRow>


    </TableLayout>





</LinearLayout>