<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@color/standar_background">

    <ImageView
        android:id="@+id/itemRutaTipo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:src="@color/standar_info"
        android:layout_marginEnd="16dp"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            style="@style/AppTextViewTitle"
            android:textAlignment="viewStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemRutaNombre"
            android:text="Nombre de la ruta"/>

        <TextView
            style="@style/AppTextView"
            android:id="@+id/itemRutaDistancia"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="0 km"
            android:textColor="@color/standar_info"
            android:textSize="14sp"/>

        <TextView
            style="@style/AppTextView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/itemRutaLocalizacion"
            android:textColor="@color/standar_info"
            android:text="LocalizaciÃ³n"
            android:textSize="14sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/itemRutaEstrellas"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\u2605\u2605\u2605\u2605\u2606"
        android:textColor="@color/standar_info"
        android:rating="0"
        android:isIndicator="true"/>

</LinearLayout>
