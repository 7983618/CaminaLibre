<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CaminaLibre" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/verde_montana</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/verde_montana</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <!-- Aplicar el estilo de la barra superior si existe -->
        <item name="actionBarStyle">@style/MiBarraEstilo</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CaminaLibre" parent="Base.Theme.CaminaLibre" />





    <style name="BottonNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@color/nav_item_color_selector</item>
        <item name="itemTextColor">@color/nav_item_color_selector</item>
        <item name="itemRippleColor">#1A000000</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemActiveIndicatorStyle">@null</item>
    </style>



    <!-- Estilo para el NavigationView -->
    <style name="Widget.MyApplication.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/green_normal</item>
        <item name="itemTextColor">@color/black</item>
        <item name="headerLayout">@layout/nav_header</item>
    </style>


</resources>