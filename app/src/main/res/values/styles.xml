<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTextView">
        <item name="android:textSize">@dimen/cuerpo_de_texto</item>
        <item name="android:textColor">@color/standar_text</item>
        <item name="android:textStyle">bold</item>
<!--        <item name="android:layout_gravity">center_vertical</item>-->

    </style>
    <style name="AppTextViewTitle" parent="AppTextView">
        <item name="android:textSize">@dimen/cuerpo_de_titulo</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="AppEditText">
        <item name="android:textSize">@dimen/cuerpo_de_texto</item>
        <item name="android:padding">@dimen/margen_pequeño</item>
        <item name="android:background">@color/standar_background</item>
        <item name="android:textColor">@color/standar_text</item>
    </style>
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/cuerpo_de_texto_de_boton</item>
        <item name="android:padding">@dimen/margen_pequeño</item>
        <item name="android:backgroundTint">@color/standar_interact</item>
        <item name="android:height">@dimen/altura_de_boton</item>
        <item name="android:textColor">@color/standar_text</item>
    </style>

    <style name="AltaRutasTextView" parent="AppTextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
    </style>t
    <style name="AltaRutasEditText" parent="AppEditText">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="AltasRutasFila">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">25dp</item>
<!--        <item name="android:gravity">center_vertical</item>-->
    </style>
    <style name="FichaTecnicaTextView" parent="AppTextView">
        <item name="android:layout_gravity">top</item>
    </style>
    <style name="FichaTecnicaFila">
        <item name="android:layout_marginBottom">70dp</item>
<!--        <item name="android:gravity">top</item>-->
    </style>
    <style name="FichaTecnicaLinearLayoutImageIco">
        <item name="android:layout_gravity">top</item>
    </style>
</resources>