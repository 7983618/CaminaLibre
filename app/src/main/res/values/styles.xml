<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTextView">
        <item name="android:textSize">@dimen/cuerpo_de_texto</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>

    </style>
    <style name="AppEditText">
        <item name="android:textSize">@dimen/cuerpo_de_texto</item>
        <item name="android:padding">@dimen/margen_pequeño</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:textSize">@dimen/cuerpo_de_titulo</item>
        <item name="android:padding">@dimen/margen_pequeño</item>
        <item name="android:backgroundTint">@color/grey3</item>
        <item name="android:height">@dimen/altura_de_boton</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AltaRutasTextView" parent="AppTextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="AltaRutasEditText" parent="AppEditText">
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>
</resources>